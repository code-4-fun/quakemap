<html>
  <head>
    <title>Earthquake Map</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- styles -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/lib/angular-material/angular-material.css" />
  </head>
  <body data-ng-app="quakemap">

    <!-- Navbar -->
    <md-content>
      <md-toolbar class='md-primary md-hue-1'>
        <div class="md-toolbar-tools">
          <h3><strong>QuakeMap</strong></h3>
          <span flex></span>
          <div data-ng-controller="geoLocateCtrl">
            <h6>Current Location: {{current}}</h6>
          </div>
        </div>
      </md-toolbar>
    </md-content>

    <md-content data-ng-controller='mapController as map'>
      <ui-gmap-google-map
            center='currentLocation.center' zoom='currentLocation.zoom'
            refresh='isMapReady' options='options'>
            <ui-gmap-markers
                  models="markers" coords="'self'"
                  idkey='id' icon='icon'>
            </ui-gmap-markers>
      </ui-gmap-google-map>
    </md-content>

    <!-- libraries -->
    <script src="/lib/lodash/lodash.js"></script>
    <script src="/lib/angular/angular.js"></script>
    <script src="/lib/angular-aria/angular-aria.js"></script>
    <script src="/lib/angular-animate/angular-animate.js"></script>
    <script src="/lib/angular-material/angular-material.js"></script>
    <script src="/lib/angularjs-geolocation/dist/angularjs-geolocation.min.js"></script>
    <script src="/lib/angular-simple-logger/dist/angular-simple-logger.js"></script>
    <script src="/lib/angular-google-maps/dist/angular-google-maps.js"></script>

    <!-- app library -->
    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/geolocation.js"></script>
    <script src="/javascripts/maps.js"></script>

  </body>
</html>
